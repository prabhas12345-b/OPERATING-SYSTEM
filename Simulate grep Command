#include <stdio.h>
#include <string.h>
int main() {
    FILE *fp;
    char fname[50], word[50], line[200];
    printf("Enter filename: ");
    scanf("%s", fname);
    printf("Enter word to search: ");
    scanf("%s", word);
    fp = fopen(fname, "r");
    if (!fp) {
        printf("File not found!\n");
        return 0;
    }
    printf("\nLines containing '%s':\n", word);
    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, word))
            printf("%s", line);
    }
    fclose(fp);
    return 0;
}
