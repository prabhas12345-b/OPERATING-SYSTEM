#include <stdio.h>
int main() 
{
    int n,tq,i,bt[10],rt[10],wt[10]={0},tat[10],time=0,done;
    float avg_wt=0, avg_tat=0;
    printf("Enter n and time quantum: ");
    scanf("%d%d",&n,&tq);  
    for(i=0;i<n;i++) {
        printf("BT P%d: ",i+1);
        scanf("%d",&bt[i]);
        rt[i]=bt[i];
    }  
    do {
        done=1;
        for(i=0;i<n;i++) {
            if(rt[i]>0) {
                done=0;
                if(rt[i]>tq) {
                    time+=tq;
                    rt[i]-=tq;
                } 
				else
				{
                    time+=rt[i];
                    wt[i]=time-bt[i];
                    rt[i]=0;
                }
            }
        }
    } while(!done);
    printf("\nProcess\tBT\tWT\tTAT\n");
    for(i=0;i<n;i++) {
        tat[i]=bt[i]+wt[i];
        avg_wt+=wt[i];
        avg_tat+=tat[i];
        printf("P%d\t%d\t%d\t%d\n",i+1,bt[i],wt[i],tat[i]);
    }
    printf("\nAverage Waiting Time = %.2f", avg_wt/n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat/n); 
    return 0;
}
