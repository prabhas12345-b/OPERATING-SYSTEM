#include <stdio.h>
int main() {
    int nb, np, i, j;
    int blockSize[20], processSize[20], allocation[20];
    printf("Enter number of blocks: ");
    scanf("%d", &nb);
    printf("Enter block sizes: ");
    for (i = 0; i < nb; i++)
        scanf("%d", &blockSize[i]);
    printf("Enter number of processes: ");
    scanf("%d", &np);
    printf("Enter process sizes: ");
    for (i = 0; i < np; i++)
        scanf("%d", &processSize[i]);
    for (i = 0; i < np; i++)
        allocation[i] = -1;
    for (i = 0; i < np; i++) {
        for (j = 0; j < nb; j++) {
            if (blockSize[j] >= processSize[i]) {
                allocation[i] = j;              // allocate block j
                blockSize[j] -= processSize[i]; // reduce block size
                break;
            }
        }
    }

    // Output
    printf("\nProcess\tSize\tBlock Allocated\n");
    for (i = 0; i < np; i++) {
        if (allocation[i] != -1)
            printf("P%d\t%d\tBlock %d\n", i+1, processSize[i], allocation[i]+1);
        else
            printf("P%d\t%d\tNot Allocated\n", i+1, processSize[i]);
    }

    return 0;
}
