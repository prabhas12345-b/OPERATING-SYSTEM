#include <stdio.h>
#include <stdlib.h>
int main() {
    FILE *fp;
    char fname[50], data[100];
    int choice;
    while (1) {
        printf("\n1. Create File\n2. Write File\n3. Read File\n4. Delete File\n5. Exit\nEnter choice: ");
        scanf("%d", &choice);
        switch (choice) {
            case 1:
                printf("Enter filename: ");
                scanf("%s", fname);
                fp = fopen(fname, "w");
                if (fp == NULL) printf("Error creating file!\n");
                else printf("File created: %s\n", fname);
                fclose(fp);
                break;
            case 2:
                printf("Enter filename: ");
                scanf("%s", fname);
                fp = fopen(fname, "a");
                if (fp == NULL) { printf("File not found!\n"); break; }
                printf("Enter text to write: ");
                fflush(stdin);
                gets(data);
                fprintf(fp, "%s\n", data);
                fclose(fp);
                printf("Data written successfully.\n");
                break;
            case 3:
                printf("Enter filename: ");
                scanf("%s", fname);
                fp = fopen(fname, "r");
                if (fp == NULL) { printf("File not found!\n"); break; }
                printf("File contents:\n");
                while (fgets(data, 100, fp) != NULL)
                    printf("%s", data);
                fclose(fp);
                break;
            case 4:
                printf("Enter filename: ");
                scanf("%s", fname);
                if (remove(fname) == 0)
                    printf("File deleted.\n");
                else
                    printf("File not found!\n");
                break;
            case 5: exit(0);
        }
    }
}
