#include <stdio.h>
#include <stdlib.h>
int main() {
    int n, head, disk_size, direction;
    printf("Enter number of requests: ");
    scanf("%d", &n);
    int queue[n];
    printf("Enter request sequence:\n");
    for (int i = 0; i < n; i++) scanf("%d", &queue[i]);
    printf("Enter initial head position: ");
    scanf("%d", &head);
    printf("Enter total disk size: ");
    scanf("%d", &disk_size);
    printf("Enter head movement direction (0=left, 1=right): ");
    scanf("%d", &direction);
    int arr[50], size = 0;
    for (int i = 0; i < n; i++) arr[size++] = queue[i];
    arr[size++] = 0; arr[size++] = disk_size - 1;
    for (int i = 0; i < size-1; i++) {
        for (int j = i+1; j < size; j++) {
            if (arr[i] > arr[j]) {
                int temp = arr[i]; arr[i] = arr[j]; arr[j] = temp;
            }
        }
    }
    int pos = 0, total = 0;
    for (int i = 0; i < size; i++) {
        if (arr[i] >= head) { pos = i; break; }
    }
    printf("Head movement path: %d", head);
    if (direction == 0) { // left first
        for (int i = pos-1; i >= 0; i--) {
            total += abs(head - arr[i]);
            head = arr[i];
            printf(" -> %d", head);
        }
        for (int i = pos; i < size; i++) {
            total += abs(head - arr[i]);
            head = arr[i];
            printf(" -> %d", head);
        }
    } else { 
        for (int i = pos; i < size; i++) {
            total += abs(head - arr[i]);
            head = arr[i];
            printf(" -> %d", head);
        }
        for (int i = pos-1; i >= 0; i--) {
            total += abs(head - arr[i]);
            head = arr[i];
            printf(" -> %d", head);
        }
    }
    printf("\nTotal Head Movement = %d\n", total);
    return 0;
}
