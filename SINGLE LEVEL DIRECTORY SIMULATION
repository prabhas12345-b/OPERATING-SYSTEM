#include <stdio.h>
#include <string.h>
struct {
    char fname[20][20];
    int count;
} dir;
int main() {
    int ch;
    char f[20];
    dir.count = 0;
    while (1) {
        printf("\n1. Create File\n2. Delete File\n3. Search File\n4. List Files\n5. Exit\nEnter choice: ");
        scanf("%d", &ch);
        switch (ch) {
            case 1:
                printf("Enter filename: ");
                scanf("%s", dir.fname[dir.count]);
                dir.count++;
                break;
            case 2:
                printf("Enter filename to delete: ");
                scanf("%s", f);
                for (int i = 0; i < dir.count; i++) {
                    if (strcmp(f, dir.fname[i]) == 0) {
                        printf("File %s deleted.\n", f);
                        strcpy(dir.fname[i], dir.fname[dir.count-1]);
                        dir.count--;
                        goto found;
                    }
                }
                printf("File not found!\n");
                found: break;
            case 3:
                printf("Enter filename to search: ");
                scanf("%s", f);
                for (int i = 0; i < dir.count; i++) {
                    if (strcmp(f, dir.fname[i]) == 0) {
                        printf("File found: %s\n", f);
                        goto search_done;
                    }
                }
                printf("File not found!\n");
                search_done: break;
            case 4:
                if (dir.count == 0) printf("No files.\n");
                else {
                    printf("Files:\n");
                    for (int i = 0; i < dir.count; i++)
                        printf("%s\n", dir.fname[i]);
                }
                break;
            case 5:
                return 0;
        }
    }
}
